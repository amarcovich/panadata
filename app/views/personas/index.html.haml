.row-fluid
  .col-sm-2
    = render 'search'
  .col-sm-10
    #content
      .page-header
        %h1 Busqueda de Persona Natural
      - if params[:query]
        .row-fluid
          .table-responsive
            %table.table.table-condensed.table-hover
              %thead
                %tr
                  %th Nombre
              %tbody
                - @personas.each do |persona|
                  %tr
                    %td= link_to persona.nombre, persona_path(persona)
          = will_paginate @personas, renderer: BootstrapPagination::Rails
