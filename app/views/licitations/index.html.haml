- model_class = Licitation

= render 'search'
#content
  .table-responsive
    %table.table.table-hover.table-condensed
      - if not params[:query]
        %caption 
          %h1 Ãšltimas Licitaciones
          %hr
      %thead
        %tr
          %th= model_class.human_attribute_name(:entidad)
          %th= model_class.human_attribute_name(:precio)
          %th= model_class.human_attribute_name(:proponente)
          %th.hidden-phone= model_class.human_attribute_name(:description)
      %tbody
        - @licitations.each do |licitation|
          %tr{:data=> {:link=> licitation_path(licitation)}}
            %td= licitation.entidad.titleize.html_safe if licitation.entidad
            %td= number_to_currency(licitation.precio) if licitation.precio
            %td= licitation.proponente.titleize.html_safe if licitation.proponente and licitation.proponente != 'empty'
            %td.hidden-phone= licitation.description.humanize if licitation.description

  = will_paginate @licitations
