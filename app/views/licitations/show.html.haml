- model_class = Licitation
.jumbotron
    %h1 Acto #{@licitation.acto}

#content
    .row
        .col-md-12
            .col-md-7
                %p
                    %strong= model_class.human_attribute_name(:categoria) + ':'
                    = @licitation.category.name
                %p 
                    %strong= model_class.human_attribute_name(:entidad) + ':'
                    = @licitation.entidad.mb_chars.titleize
                %p
                    %strong= model_class.human_attribute_name(:dependencia) + ':'
                    = @licitation.dependencia.mb_chars.titleize
                %p
                    %strong= model_class.human_attribute_name(:unidad) + ':'
                    = @licitation.unidad.mb_chars.titleize
                %p
                    %strong= model_class.human_attribute_name(:provincia) + ':'
                    = @licitation.provincia.mb_chars.titleize
                %p
                    %strong= model_class.human_attribute_name(:precio) + ':'
                    = number_to_currency(@licitation.precio)
                %p
                    %strong= 'Descripci√≥n:'
                    %br
                    = @licitation.description.mb_chars.downcase
            .col-md-4
                .row
                    .col-ml-4
                        .well
                            %p
                                %strong= model_class.human_attribute_name(:nombre_contacto) + ':'
                                = @licitation.nombre_contacto.mb_chars.titleize
                            %p
                                %strong= model_class.human_attribute_name(:telefono_contacto) + ':'
                                = @licitation.telefono_contacto
                            %p
                                %strong= model_class.human_attribute_name(:correo_contacto) + ':'
                                = @licitation.correo_contacto
                - if @licitation.proponente != 'empty'
                    .row
                        .col-ml-4
                            .well
                                %p
                                    %strong= model_class.human_attribute_name(:proponente) + ':'
                                    = @licitation.proponente



    .row
        .col-md-12
            %hr
            .col-md-7
                %p
                    %strong= model_class.human_attribute_name(:fecha) + ':'
                    = @licitation.fecha
                %p
                    %strong= model_class.human_attribute_name(:tipo_de_compra) + ':'
                    = @licitation.compra_type
            .col-md-4
                %p
                    %strong= model_class.human_attribute_name(:modalidad) + ':'
                    = @licitation.modalidad
                %p
                    %strong= model_class.human_attribute_name(:objeto) + ':'
                    = @licitation.objeto

    = link_to 'Atras', licitations_path
    \|
    = link_to 'Original', @licitation.full_url
